<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Height="600" Width="900">
    <Grid x:Name="MainData">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/DroneImg.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Image Source="/Images/logo_1.png" HorizontalAlignment="Left" Margin="604,83,0,389" Width="204"></Image>
        <Button Content="Drone List Window"    Style="{StaticResource RedButton}" HorizontalAlignment="Left" Margin="634,210,0,0" Click="ViewDroneListWindow" />
        <Button Content="Parcel List Window"   Style="{StaticResource RedButton}" HorizontalAlignment="Left" Margin="634,280,0,0" Click="ViewParcelListWindow" />
        <Button Content="Customer List Window" Style="{StaticResource RedButton}" HorizontalAlignment="Left" Margin="634,350,0,0" Click="ViewCustomerListWindow" FontSize="13"/>
        <Button Content="Station List Window"  Style="{StaticResource RedButton}" HorizontalAlignment="Left" Margin="634,420,0,0" Click="ViewStationListWindow"/>
    </Grid>
</Window>